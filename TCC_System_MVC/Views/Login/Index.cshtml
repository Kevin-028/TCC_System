@model  TCC_System_Application.ManagementServices.UserViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SemLayout.cshtml";
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="" class="logo d-flex align-items-center w-auto">
                            <img src="~/Content/IMG/Logo_Pato.gif" alt="">
                            @*<span class="d-none d-lg-block">TCC_System</span>*@
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Faça login na sua conta</h5>
                                <p class="text-center small">Digite seu nome de usuário e senha para fazer o login</p>
                            </div>

                            <form class="row g-3 needs-validation" novalidate>
                                <div class="col-12">
                                    @Html.LabelFor(model => model.Email, new { @class = "form-label" }) :

                                    <div class="input-group has-validation">
                                        <span class="input-group-text" id="inputGroupPrepend">@@</span>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                                        <div class="invalid-feedback">Por favor, digite seu E-Mail.</div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    @Html.LabelFor(model => model.Password, new { @class = "form-label" }) :
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", required = "required", Type= "password" })
                                    <div class="invalid-feedback">Por favor, digite sua senha!</div>
                                </div>
                               
                                <div class="col-12">
                                    <button id="Save" class="btn btn-primary w-100" type="button">
                                        <span class="spinner-border spinner-border-sm visually-hidden" role="status" aria-hidden="true"></span>
                                        <span class="">logar</span>
                                    </button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">Não tem conta? <a href="@Url.Action("NewUser", "Login")">Novo usuário</a></p>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</div>
@section scripts{
    <script>

    function Save() {

        $("#Save").click(function () {
            PostForm(this.form, '@Url.Action("Login", "Login" , Request.Url.Scheme)', PostArea, false);
        });

        function PostArea(result) {
            if (ShowJsonResult(result)) {
                
                setInterval(function () {
                    window.location.replace('@Url.Action("", "Home")');
                }, 2500);
            }
        };
    }
    Save();


    </script>

}